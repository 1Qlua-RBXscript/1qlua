local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")
local LocalPlayer = Players.LocalPlayer

-- –¢–æ—á–Ω–∞—è –∫–æ–ø–∏—è —Ä–∞–±–æ—á–µ–≥–æ COPYCAMERA, –Ω–æ –ø–æ–¥ –∏–º–µ–Ω–µ–º COPYCAM
getgenv().COPYCAM = function()
    local cam = Workspace.CurrentCamera
    if not cam then
        warn("‚ùå –ö–∞–º–µ—Ä–∞ –Ω–µ –Ω–∞–π–¥–µ–Ω–∞")
        return nil
    end
    
    local cf = cam.CFrame
    -- –ü–æ–ª–Ω–æ—Å—Ç—å—é –∏–¥–µ–Ω—Ç–∏—á–Ω—ã–π –æ—Ä–∏–≥–∏–Ω–∞–ª—É —Ñ–æ—Ä–º–∞—Ç
    local str = string.format(
        "CFrame.new(Vector3.new(%f, %f, %f), Vector3.new(%f, %f, %f))",
        cf.X, cf.Y, cf.Z,
        cf.LookVector.X * 10 + cf.X,
        cf.LookVector.Y * 10 + cf.Y,
        cf.LookVector.Z * 10 + cf.Z
    )
    
    setclipboard(str)
    print("üìã –ü–æ–∑–∏—Ü–∏—è –∫–∞–º–µ—Ä—ã —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∞:\n"..str)
    return str
end

-- –¢–æ—á–Ω–∞—è –∫–æ–ø–∏—è —Ä–∞–±–æ—á–µ–≥–æ SETCAMERA, –Ω–æ –ø–æ–¥ –∏–º–µ–Ω–µ–º SETCAM
getgenv().SETCAM = function(pos, lookAt)
    local cam = Workspace.CurrentCamera
    if not cam then return end
    
    -- –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–æ–µ –ø—Ä–µ–æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏–µ —Å—Ç—Ä–æ–∫–∏ –≤ CFrame
    if type(pos) == "string" then
        local success, result = pcall(function()
            return loadstring("return "..pos)()
        end)
        if success then
            cam.CFrame = result
            print("‚úÖ –ö–∞–º–µ—Ä–∞ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∞ –∏–∑ —Å—Ç—Ä–æ–∫–∏")
            return
        end
    end
    
    -- –û—Ä–∏–≥–∏–Ω–∞–ª—å–Ω–∞—è –ª–æ–≥–∏–∫–∞
    if typeof(pos) == "CFrame" then
        cam.CFrame = pos
    elseif typeof(pos) == "Vector3" and lookAt then
        cam.CFrame = CFrame.new(pos, lookAt)
    else
        warn("‚ùå –ò—Å–ø–æ–ª—å–∑—É–π—Ç–µ:")
        warn("SETCAM(CFrame)")
        warn("SETCAM(Vector3 –ø–æ–∑–∏—Ü–∏—è, Vector3 –Ω–∞–ø—Ä–∞–≤–ª–µ–Ω–∏–µ)")
        warn('SETCAM("CFrame.new(...)")')
    end
end
